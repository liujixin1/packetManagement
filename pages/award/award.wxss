/* pages/index/index.wxss */

.container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
}
.main {
  width: 100%;
  overflow: hidden;
  min-height: 100%;
  background: #fff;
}

.main .icon-add {
  font-size: 60rpx;
  color: #67c23a;
  margin-left: 450rpx;
  margin-top: 10rpx;
}
.main .add{
  width: 100%;
  height: 80rpx;
  /* position: fixed; */
  /* top: 0;
  right: 0;
  z-index: 10; */
  background: #fff;
  display: flex;
}
.main .addItem {
  width: 120rpx;
  height: 60rpx;
  margin: 10rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  background: #67c23a;
  border-radius: 10rpx;
  color: #fff;
  margin-left: 600rpx;
  
}

.main .title {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 24rpx;
  border-bottom: 2rpx solid #f8f8f8;
  /* margin-top: 80rpx; */
}

.main .title .titleSerialNumber {
  width: 70rpx;
  font-size: 24rpx;
}
.main .title .titleId {
  width: 70rpx;
  font-size: 24rpx;
}

.main .title .titleName {
  width: 160rpx;
}

.main .title .titleImg {
  width: 100rpx;
}

.main .title .titleOperation {
  width: 250rpx;
}

.list .listItem {
  display: flex;
  height: 110rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.list .listItem .SerialNumber {
  width: 70rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 100rpx;
}
.list .listItem .id {
  width: 70rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 100rpx;
}
.list .listItem .name {
  width: 150rpx;
  height: 90rpx;
  margin: 5rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.list .listItem .img{
  width: 100rpx;
}
.list .listItem .img image{
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx auto;
  display: block;
}
.list .listItem .operation{
  display: flex;
  justify-content: space-around;
  width: 250rpx;
}
.list .listItem .operation image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
}
.isEnd{
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  color: #999;
}
.item {
  display: flex;
  width: 600rpx;
  position: relative;
  line-height: 80rpx;
}
